{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "sourceMap": false,
    "outDir": "./dist",
    "strict": true,
    "declaration": true,
    "allowJs": true,
    "lib": [
      "ES6"
    ],
    "typeRoots": [
      "./src/types"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./src/**/*.ts",
    "src/types/*.d.ts"
  ]
}
